{
  "name": "backend",
  "version": "1.0.0",
  "description": "Habit Tracker API Server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "test": "NODE_ENV=test jest --runInBand --forceExit",
    "test:watch": "NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand --forceExit",
    "test:auth": "NODE_ENV=test jest auth.test.ts --runInBand --forceExit",
    "test:habits": "NODE_ENV=test jest habits.test.ts --runInBand --forceExit",
    "test:tracking": "NODE_ENV=test jest tracking.test.ts --runInBand --forceExit",
    "test:analytics": "NODE_ENV=test jest analytics.test.ts --runInBand --forceExit",
    "test:books": "NODE_ENV=test jest books.test.ts --runInBand --forceExit",
    "test:challenges": "NODE_ENV=test jest challenges.test.ts --runInBand --forceExit",
    "test:templates": "NODE_ENV=test jest templates.test.ts --runInBand --forceExit",
    "test:smoke": "NODE_ENV=test jest smoke.test.ts --runInBand --forceExit",
    "test:bot": "NODE_ENV=test jest bot.test.ts --runInBand --forceExit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset --force"
  },
  "dependencies": {
    "@prisma/client": "~6.2.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/qs": "^6.14.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.57.1",
    "nodemon": "^3.1.9",
    "prisma": "~6.2.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
